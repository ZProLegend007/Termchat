import { Button, VerticalBox, HorizontalBox, LineEdit, ScrollView, ListView } from "std-widgets.slint";

global Colors {
    out property <color> primary: #87CEEB;
    out property <color> background: #000000;
    out property <color> text: #FFFFFF;
    out property <color> success: #00FF00;
    out property <color> error: #FF0000;
}

component SplashScreen inherits Rectangle {
    callback splash-complete();
    
    width: 100%;
    height: 100%;
    background: Colors.background;
    
    property <bool> animation-started: false;
    property <float> logo-opacity: 0.0;
    property <float> logo-y-offset: 50px;
    
    states [
        animate-in when animation-started : {
            logo-opacity: 1.0;
            logo-y-offset: 0px;
            in {
                animate logo-opacity { duration: 1200ms; easing: ease-out; }
                animate logo-y-offset { duration: 1200ms; easing: ease-out; }
            }
        }
    ]
    
    VerticalBox {
        alignment: center;
        Text {
            text: "████████ ███████ ██████  ███    ███  ██████ ██   ██  █████  ████████ \n   ██    ██      ██   ██ ████  ████ ██      ██   ██ ██   ██    ██    \n   ██    █████   ██████  ██ ████ ██ ██      ███████ ███████    ██    \n   ██    ██      ██   ██ ██  ██  ██ ██      ██   ██ ██   ██    ██    \n   ██    ███████ ██   ██ ██      ██  ██████ ██   ██ ██   ██    ██    ";
            color: Colors.primary;
            font-family: "monospace";
            font-size: 12px;
            font-weight: 700;
            horizontal-alignment: center;
            vertical-alignment: center;
            opacity: logo-opacity;
            y: logo-y-offset;
        }
    }
    
    Timer {
        interval: 100ms;
        running: true;
        triggered => {
            animation-started = true;
        }
    }
    
    Timer {
        interval: 1500ms;
        running: animation-started;
        triggered => {
            splash-complete();
        }
    }
}

component ConnectionScreen inherits Rectangle {
    callback connect-requested(string, string, string);
    
    in property <string> server-status: "Checking server...";
    in property <bool> server-available: false;
    in property <int> general-count: 0;
    
    width: 100%;
    height: 100%;
    background: Colors.background;
    
    VerticalBox {
        alignment: center;
        padding: 20px;
        
        Rectangle {
            width: 600px;
            height: 400px;
            border-width: 2px;
            border-color: Colors.primary;
            background: Colors.background;
            
            VerticalBox {
                padding: 20px;
                spacing: 20px;
                
                Text {
                    text: "TERMCHAT Connection";
                    color: Colors.primary;
                    font-size: 24px;
                    font-weight: 700;
                    horizontal-alignment: center;
                }
                
                HorizontalBox {
                    alignment: center;
                    spacing: 10px;
                    
                    Rectangle {
                        width: 12px;
                        height: 12px;
                        border-radius: 6px;
                        background: server-available ? Colors.success : Colors.error;
                    }
                    
                    Text {
                        text: server-status;
                        color: server-available ? Colors.success : Colors.error;
                        font-size: 14px;
                    }
                }
                
                Text {
                    text: "Keep the chat name and password blank to join the general chat";
                    color: #CCCCCC;
                    font-size: 12px;
                    horizontal-alignment: center;
                    wrap: word-wrap;
                }
                
                Text {
                    text: general-count + " user/s in general chat";
                    color: #90EE90;
                    font-size: 12px;
                    horizontal-alignment: center;
                }
                
                VerticalBox {
                    spacing: 15px;
                    
                    HorizontalBox {
                        spacing: 10px;
                        
                        Text {
                            text: "Username:";
                            color: #CCCCCC;
                            font-weight: 700;
                            width: 120px;
                            vertical-alignment: center;
                        }
                        
                        username-input := LineEdit {
                            placeholder-text: "Enter username";
                            width: 300px;
                        }
                    }
                    
                    HorizontalBox {
                        spacing: 10px;
                        
                        Text {
                            text: "Chat name:";
                            color: #CCCCCC;
                            font-weight: 700;
                            width: 120px;
                            vertical-alignment: center;
                        }
                        
                        chatname-input := LineEdit {
                            placeholder-text: "Enter chat name";
                            width: 300px;
                        }
                    }
                    
                    HorizontalBox {
                        spacing: 10px;
                        
                        Text {
                            text: "Password:";
                            color: #CCCCCC;
                            font-weight: 700;
                            width: 120px;
                            vertical-alignment: center;
                        }
                        
                        password-input := LineEdit {
                            placeholder-text: "Enter password";
                            input-type: password;
                            width: 300px;
                        }
                    }
                }
                
                HorizontalBox {
                    alignment: center;
                    spacing: 10px;
                    
                    Button {
                        text: "Connect";
                        primary: true;
                        clicked => {
                            connect-requested(username-input.text, chatname-input.text, password-input.text);
                        }
                    }
                }
            }
        }
    }
    
    username-input.accepted => {
        chatname-input.focus();
    }
    
    chatname-input.accepted => {
        password-input.focus();
    }
    
    password-input.accepted => {
        connect-requested(username-input.text, chatname-input.text, password-input.text);
    }
}

export struct ChatMessage {
    username: string,
    content: string,
    color: color,
    is-server: bool,
}

component ChatScreen inherits Rectangle {
    callback send-message(string);
    
    in property <string> chat-name: "general";
    in property <string> connection-status: "Connected";
    in property <[ChatMessage]> messages: [];
    
    width: 100%;
    height: 100%;
    background: Colors.background;
    
    VerticalBox {
        Rectangle {
            height: 60px;
            background: Colors.background;
            border-bottom-width: 2px;
            border-bottom-color: Colors.primary;
            
            Text {
                text: "TERMCHAT - " + connection-status + ": '" + chat-name + "'";
                color: Colors.primary;
                font-size: 18px;
                font-weight: 700;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }
        
        Rectangle {
            border-width: 2px;
            border-color: Colors.primary;
            background: Colors.background;
            
            ScrollView {
                VerticalBox {
                    for message in messages : Rectangle {
                        width: 100%;
                        height: 30px;
                        
                        HorizontalBox {
                            padding: 5px;
                            
                            Text {
                                text: message.is-server ? "Server: " + message.content : "[" + message.username + "]: " + message.content;
                                color: message.is-server ? Colors.primary : message.color;
                                font-weight: message.is-server ? 700 : 400;
                                wrap: word-wrap;
                            }
                        }
                    }
                }
            }
        }
        
        Rectangle {
            height: 80px;
            border-width: 2px;
            border-color: Colors.primary;
            background: Colors.background;
            
            HorizontalBox {
                padding: 15px;
                spacing: 10px;
                
                message-input := LineEdit {
                    placeholder-text: "Type your message here...";
                }
                
                Button {
                    text: "Send";
                    clicked => {
                        if (message-input.text != "") {
                            send-message(message-input.text);
                            message-input.text = "";
                        }
                    }
                }
            }
        }
    }
    
    message-input.accepted => {
        if (message-input.text != "") {
            send-message(message-input.text);
            message-input.text = "";
        }
    }
    
    init => {
        message-input.focus();
    }
}

export component App inherits Window {
    callback splash-complete();
    callback connect-requested(string, string, string);
    callback send-message(string);
    
    in property <string> current-screen: "splash";
    in property <string> server-status: "Checking server...";
    in property <bool> server-available: false;
    in property <int> general-count: 0;
    in property <string> chat-name: "general";
    in property <string> connection-status: "Connected";
    in property <[ChatMessage]> messages: [];
    
    title: "TERMCHAT";
    width: 800px;
    height: 600px;
    
    if current-screen == "splash" : SplashScreen {
        splash-complete => { splash-complete(); }
    }
    
    if current-screen == "connection" : ConnectionScreen {
        server-status: server-status;
        server-available: server-available;
        general-count: general-count;
        connect-requested(username, chatname, password) => { 
            connect-requested(username, chatname, password); 
        }
    }
    
    if current-screen == "chat" : ChatScreen {
        chat-name: chat-name;
        connection-status: connection-status;
        messages: messages;
        send-message(msg) => { send-message(msg); }
    }
}
